@{
    IntFactoryEntity.UsersEntity CurrentUser = (IntFactoryEntity.UsersEntity)Session["ClientManager"];
    
}
<html>
<head>
    <title>@ViewBag.Title</title>    
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/manage/css/layout.css" rel="stylesheet" />
    <link href="/modules/manage/css/iconfont/iconfont.css" rel="stylesheet" />
    @RenderSection("css", false)    
</head>
<body>
    <header class="header">
        <div class="logo left">
            <a href="/Home/Index">
                <img id="companyLogo" src="http://o9h6bx3r4.bkt.clouddn.com//Content/UploadFiles/Task/2016.8.16/1471341033512.png?imageView2/1/w/26/h/26"></a>
        </div>
        <div class="left companyname long" id="companyName" title="云销科技">云销科技</div>
        <ul class="menu"id="modulesMenu">
            <li class="Index">
                <a href="/Manage/Home/Index" class="">
                    <img class="ico" data-ico="/Content/menuico/home.png" data-hover="/Content/menuico/homehover.png" src="/Content/menuico/home.png">
                    <span class="name">首页</span>
                    <span class="cursor"></span>
                </a> 
            </li>
            <li class="Function">
                <a class="" href="/Manage/HelpCenter/TypeList">
                    <img class="ico" data-ico="/Content/menuico/custom.png" data-hover="/Content/menuico/customhover.png" src="/Content/menuico/custom.png"> 
                    <span class="name">帮助中心</span>
                    <span class="cursor"></span>
                </a>
            </li>            
            <li class="Setting">
                <a class="" href="/Manage/System/Users">
                    <img class="ico" data-ico="/Content/menuico/system.png" data-hover="/Content/menuico/systemhover.png" src="/Content/menuico/system.png"> 
                    <span class="name">系统设置</span>
                    <span class="cursor"></span>
                </a> 
            </li>
        </ul>
        <div id="currentUser" class="currentuser right">            
            <span class="username">
                @*@(CurrentUser.Name)*@aaaa
            </span>
            <span class="dropdown hide">
                <span class="dropdown-top"></span>
                <span class="dropdown-bottom"></span>
            </span>
        </div>
    </header>

    <nav class="nav-list">
        <div class="controller select functions">
            <div class="controller-box">
                <div class="controller-name">
                    <span class="open left rotate" style="transform: rotate(90deg);"></span>
                    <span class="name left">分类管理</span>
                </div>
            </div>
            <ul class="action-box" style="display: block;">
                <li class="action" id="add-Type">
                    <a href="/Manage/HelpCenter/AddType"><span class="name">添加分类</span></a>
                </li>
                <li class="action" id="list-Type">
                    <a href="/Manage/HelpCenter/TypeList"><span class="name">分类列表</span></a>
                </li>                
            </ul>
        </div>
        <div class="controller select functions">
            <div class="controller-box">
                <div class="controller-name">
                    <span class="open left rotate" style="transform: rotate(90deg);"></span>
                    <span class="name left">内容管理</span>
                </div>
            </div>
            <ul class="action-box" style="display: block;">                
                <li class="action" id="add-Details">
                    <a href="/Manage/HelpCenter/AddDetail"><span class="name">添加内容</span></a>
                </li>
                <li class="action" id="details-List">
                    <a href="/Manage/HelpCenter/DetailList"><span class="name">内容列表</span></a>
                </li>
            </ul>
        </div>
        <div class="controller select setting">
            <div class="controller-box">
                <div class="controller-name">
                    <span class="open left rotate" style="transform: rotate(90deg);"></span>
                    <span class="name left">管理员管理</span>
                </div>
            </div>
            <ul class="action-box" style="display: block;">
                <li class="action userlist">
                    <a href="/Manage/System/Users"><span class="name">管理员列表</span></a>
                </li>
                <li class="action add-users">
                    <a href="/Manage/System/AddUsers"><span class="name">管理员添加</span></a>
                </li>
            </ul>
        </div>

    </nav>

    @*点击头像展开下拉列表*@
    <div class="dropdown-userinfo hide">
        <div class="top-lump"></div>
        <ul class="items-list">             
            <li class="item"><a href="/Manage/Home/Logout">安全退出</a></li>
        </ul>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>
     





    <script src="/Scripts/jquery-1.11.1.js"></script>
    <script src="/Scripts/sea.js"></script>
    <script src="/Scripts/sea-config.js"></script>    
    <script type="text/javascript">   
        seajs.use(["/modules/manage/scripts/layout"], function (ObjectJS) {
            ObjectJS.init('@ViewBag.Name', '@ViewBag.navName');
        });
    </script>
    @RenderSection("scripts",false)
</body>
</html>


