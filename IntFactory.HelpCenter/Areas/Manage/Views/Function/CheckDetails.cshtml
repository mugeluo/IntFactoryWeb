@{
    ViewBag.Title = "内容查看";
    var item = (IntFactoryEntity.TypeEntity)ViewBag.item;
    var model = (IntFactoryEntity.HelpEntity)ViewBag.model;
    ViewBag.Name = "Function";  
}
@section css{    
    <link href="/modules/manage/css/function/function.css" rel="stylesheet" />
}
@section scripts{
    <script src="/modules/plug/umeditor/ueditor.config.js"></script>
    <script src="/modules/plug/umeditor/umeditor.min.js"></script>
    <script type="text/javascript">
        seajs.use(["/modules/manage/scripts/function/update-content"], function (ObjectJS) {
            var um = UE.getEditor('remark');
            ObjectJS.init(um, '@Html.ToJSONString(model)');
        });
    </script>
}
<div class="header-box">
    <a href="/Manage/Function/DetailsList" class="header-title left">返回列表</a>   
    <div class="add-type"><a href="/Manage/Function/UpdateDetails/@(model.HelpID)">编辑内容</a></div>
</div>
<div class="content-body">
    <div class="">
        <ul class="table-add">
            <li>
                <span class="column-title">类型:</span>  
                <input type="text" disabled="disabled" value="@(item.Name)" />                  
            </li>
            <li>
                <span class="column-title">标题:</span>
                <input type="text" disabled="disabled" class="title" />
            </li>
            <li>
                <span class="column-title">关键字:</span>
                <input type="text" disabled="disabled" class="keywords" />
            </li>
            <li>
                <span class="column-title left">描述:</span>
                <div style="margin-left:65px;" id="remark"></div>
            </li>
        </ul>
    </div>
</div>
