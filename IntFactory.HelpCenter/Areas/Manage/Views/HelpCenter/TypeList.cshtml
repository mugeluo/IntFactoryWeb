@{
    ViewBag.Title = "后台 | 分类列表";
    ViewBag.Name = "Function";
    ViewBag.navName = "list-Type";
}

@section css{
    <link href="/modules/manage/css/helpcenter/helpcenter.css" rel="stylesheet" />
    <link href="/modules/plug/daterangepicker/daterangepicker.css" rel="stylesheet" />
}
@section scripts{   
    <script type="text/javascript">
        seajs.use(["/modules/manage/scripts/helpcenter/classification"], function (ObjectJS) {
            ObjectJS.init();
        });
    </script>
}

<div class="header-box">
    <span class="header-title left">分类列表</span>
    <div class="add-type"><a href="/Manage/HelpCenter/AddType" class="btn-add">添加分类</a></div>
</div>

<div class="content-body">
    <div class="search-body mTop10">
        <ul class="search-item module-source">
            <li class="column-name">模块：</li>
            <li data-idsource="-1"class="item hover">全部</li>
            <li data-idsource="1" class="item">功能模块</li>
            <li data-idsource="2" class="item">常见问题</li>
            <li data-idsource="3" class="item">新手指引</li>
        </ul>
    </div>
    <div class="search-items mTop20">
        <div class="left mRight20" id="chooseBranch"></div>
        <div class="left">
            <input type="text" id="iptCreateTime" placeholder="创建时间"  class="ipt-date"  />
        </div>
        <div class="right searth-module mTop5" data-text="输入关键字" data-width="200"></div>
    </div>
    <div class="search-sort">
        <ul class=" left">
            <li>排序</li>
            <li class="sort-item hover" data-column="Type.CreateTime">
                创建日期
                <span class="asc"></span>
                <span class="desc hover"></span>
            </li>            
        </ul>
        <div class="clear"></div>
    </div>
    <table class="table-list category mTop10">
        <tr class="tr-header">        
            <td width="100">图标</td>
            <td width="100" style="width:15%">名称</td>            
            <td width="100" style="width:15%">模块</td>
            <td width="200">创建时间</td>
            <td width="120">操作</td> 
        </tr>
    </table>
    <div id="pager" class="mTop20 mRight10"></div>
</div>
