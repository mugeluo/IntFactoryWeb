@{
    ViewBag.Title = "内容查看";
    var item = (IntFactoryEntity.TypeEntity)ViewBag.item;
    var model = (IntFactoryEntity.ContentEntity)ViewBag.model;
    ViewBag.Name = "Function";  
}
@section css{    
    <link href="/modules/manage/css/helpcenter/helpcenter.css" rel="stylesheet" />
}
@section scripts{
    <script src="/modules/plug/umeditor/ueditor.config.js"></script>
    <script src="/modules/plug/umeditor/umeditor.min.js"></script>
    <script type="text/javascript">
        seajs.use(["/modules/manage/scripts/helpcenter/details"], function (ObjectJS) {
            ObjectJS.init("",'@Html.ToJSONString(model)');
        });
    </script>
}
<div class="header-box">
    <a class="header-title left">内容详情</a>   
    <div class="add-type"><a href="/Manage/HelpCenter/UpdateDetail/@(model.ContentID)" class="btn-add">编辑内容</a></div>
</div>
<div class="content-body">
    <div class="">
        <ul class="table-add">
            <li>
                <span class="column-title">标题:</span>
                <label class="title"></label>                
            </li>
            <li>
                <span class="column-title">类型:</span>  
                <label>@(item.Name)</label>                          
            </li>            
            <li>
                <span class="column-title">排序:</span>
                <label class="sort"></label>                
            </li>
            <li>
                <span class="column-title">关键字:</span>
                <label class="keywords" ></label>                
            </li>
            <li>
                @*<span class="column-title left">描述:</span>*@
                <div id="remark"></div>                
            </li>
        </ul>
    </div>
</div>
