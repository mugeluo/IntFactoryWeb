@{
    ViewBag.Title = "后台 | 内容详情";
    var model = (IntFactoryEntity.ContentEntity)ViewBag.model;
    ViewBag.Name = "Function";  
}
@section css{    
    <link href="/modules/manage/css/helpcenter/helpcenter.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">        
        $("#remark").html(decodeURI("@(model.Detail)"));        
    </script>
}
<div class="header-box">
    <a class="header-title left">内容详情</a>   
    <div class="add-type"><a href="/Manage/HelpCenter/UpdateContent/@(model.ContentID)" class="btn-add">编辑内容</a></div>
</div>
<div class="content-body">
    <div class="">
        <ul class="table-add">
            <li>
                <span class="column-title">标题:</span>
                <label class="title">@(model.Title)</label>                
            </li>
            <li>
                <span class="column-title">类型:</span>  
                <label>@(model.TypeName)</label>                          
            </li>            
            <li>
                <span class="column-title">排序:</span>
                <label class="sort">@(model.Sort)</label>                
            </li>
            <li>
                <span class="column-title">关键字:</span>
                <label class="keywords" >@(model.KeyWords)</label>                
            </li>
            <li>
                @*<span class="column-title left">描述:</span>*@
                <div id="remark" style="line-height:normal;list-style-type:initial;"></div>                
            </li>
        </ul>
    </div>
</div>
