@{
    ViewBag.Title = "厂盟 | 搜索";
    ViewBag.TitleName = "home";
}
@section css{
    <link href="/modules/css/home/search.css" rel="stylesheet" />
}
@section scripts{
    <script src="/Scripts/jquery-1.11.1.js"></script>   
    <script type="text/javascript">
        seajs.use(["scripts/home/search"], function (ObjectJS) {
            ObjectJS.init();
        });        
    </script>
}
<div class="head-content-menu">
    <div class="content">
        <div class="head-menu">
            <a href="/Home/Index">帮助中心</a>
            <span>></span>
            <a>搜索</a>
        </div>
        <div class="head-search">            
            <input class="search-txt" type="text" placeholder="搜索相关问题" />
            <i class="iconfont">&#xe618;</i>
        </div>
    </div>
</div>
<div style="background-color:#f9f9f9;">
    <div class="search-content clear-after">
        <div class="search-title clear-after">
            <div class="search-sort">
                <ul class="left">            
                    <li class="sort-item hover" data-column="c.CreateTime" style="padding-left:10px;">
                        创建日期
                        <span class="asc"></span>
                        <span class="desc hover"></span>
                    </li>                    
                    <li class="sort-item" data-column="c.ClickNumber">
                        最热
                        <span class="asc"></span>
                        <span class="desc"></span>
                    </li>             
                </ul>
                <div class="clear"></div>
            </div>
            <div class="right mRight10 font16" style="line-height:40px;color:#000">搜索到<a class="color000 pLeft10 pRight10 font16">0</a>个结果</div>
        </div>
        <ul class="search-results">
            
        </ul>
        <div class="right mRight10 font16 count-trem" style="line-height:40px;color:#000">本页共<a class="color000 pLeft10 pRight10 font16">0</a>个结果</div>
        <div id="pager" class="center pBottom50"></div>
    </div>
</div>


