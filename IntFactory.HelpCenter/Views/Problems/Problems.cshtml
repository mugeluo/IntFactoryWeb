@{
    var list = (List<IntFactoryEntity.TypeEntity>)ViewBag.list;
    ViewBag.Title = "厂盟 | 常见问题";
    ViewBag.TitleName = "Problems";
}
@section css{
    <link href="/modules/css/Problems/problems.css" rel="stylesheet" />
}
@section scripts{
    <script src="/Scripts/jquery-1.11.1.js"></script>   
    <script type="text/javascript">
        seajs.use(["scripts/problems/problems"], function (ObjectJS) {
            ObjectJS.init();
        });        
    </script>
}
<div class="head-content-menu">
    <div class="content content-width">
        <div class="head-menu">
            <a href="/Home/Index">帮助中心</a>
            <span>></span>
            <a>常见问题</a>
        </div>
        <div class="head-search">            
            <input class="search-txt" type="text" placeholder="搜索相关问题" />
            <i class="iconfont">&#xe618;</i>
        </div>
    </div>
</div>

<div class="details content-width clear-after">
    <div class="category">
        <ul class="category-menu clear-after">
            @if (list.Count>0)
            {
                foreach (var item in list)
                {
                    <li class="" data-id="@(item.TypeID)">@(item.Name)<div class="category-line"></div></li>
                }
            }            
        </ul>
        <ul class="problems-details clear-after">
            
        </ul>
        <div class="load-more">加载更多</div>
    </div>
    <div class="example">
        <ul>
            <li class="item-all"><div>热门问题</div></li>
            
            <li><a href="/Problems/HotProblems">更多 >></a></li>
        </ul>
    </div>
</div>