@{
    var model = (IntFactoryEntity.ContentEntity)ViewBag.list;
    var HotQAContents = (List<IntFactoryEntity.ContentEntity>)ViewBag.HotQAContents;
    ViewBag.Title = "厂盟 | 详情页";
    ViewBag.TitleName = "problems";
}
@section css{
    <link href="/modules/css/Problems/problems.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">        
        var model = ('@(Html.ToJSONString(model))');
        model = JSON.parse(model.replace(/&quot;/g, '"'));
        $("#remark").html(decodeURI(model.Detail));
    </script>
}


<div class="head-content-menu ">
    <div class="content content-width">
        <div class="head-menu">
            <a href="/Home/Index">帮助中心</a>
            <span>></span>
            <a href="/Problems/Problems">常见问题</a>
            <span>></span>
            <a>@(model.TypeName)</a>
        </div>
        <div class="head-search">            
            <input class="search-txt" type="text" placeholder="搜索相关问题" />
            <i class="iconfont">&#xe618;</i>
        </div>
    </div>
</div>

<div class="details content-width clear-after">
    <div class="category">
        <div class="details-title">@(model.Title)</div>
        <ul class="information clear-after">
            <li class="left">
                更新时间：
                <span>@(model.UpdateTime)</span>
            </li> 
            
            <li class="right">
                浏览：
                <span>@(model.ClickNumber)</span>
            </li>
        </ul>
        <div id="remark" class="remark"></div>
    </div>
    <div class="example">
        <ul>
            <li class="item-all"><div>热门问题</div></li>
            @{
                foreach (var qa in HotQAContents)
                {
                <li class="width300 long"><a href='/Problems/ProblemsDetail/@qa.ContentID'>· @qa.Title</a></li>
                }
            }
            <li><a href="/Problems/HotProblems">更多 >></a></li>
        </ul>
    </div>
</div>

