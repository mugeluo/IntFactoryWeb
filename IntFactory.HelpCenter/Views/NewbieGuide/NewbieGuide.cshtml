@{
    var list = (List < IntFactoryEntity.ContentEntity > )ViewBag.item;
    ViewBag.Title = "厂盟 | 新手指南";
    ViewBag.TitleName = "NewbieGuide";
}
@section css{
    <link href="/modules/css/newbieguide/newbieguide.css" rel="stylesheet" />
    <link href="/modules/plug/img-switch/style.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["scripts/newbieguide/newbieguide"], function (ObjectJS) {
            ObjectJS.init('@(Html.ToJSONString(list))');
        });
    </script>
}
