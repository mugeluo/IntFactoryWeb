@{
    var list = (List<IntFactoryEntity.TypeEntity>)ViewBag.List;
    ViewBag.Title = "后台 | 添加内容";
    ViewBag.Name = "Function";
    ViewBag.navName = "type-details";
}

@section css{    
    <link href="/modules/manage/css/function/function.css" rel="stylesheet" />
}
@section scripts{
    <script type="text/javascript">
        seajs.use(["/modules/manage/scripts/function/function"], function (ObjectJS) {
            ObjectJS.init('@ViewBag.navName');
        });
    </script>
}
<div class="header-box">
    <a href="/Manage/Function/DetailsList" class="header-title left">返回列表</a>   
</div>
<div class="content-body">
    <div class="add-details">
        <ul class="details">
            <li>
                <div class="left mRight20">分类类型：</div>
                <select>
                    @foreach (var item in list)
                    {
                        <option data-id="@(item.TypeID)">@(item.Name)</option>
                    }        
                </select>
            </li>
            <li>
                <div class="left mRight50">标题：</div>
                <input type="text" class="title" />
            </li>
            <li>
                <div class="left mRight50">描述：</div>
                <textarea class="desc"></textarea>
            </li>
        </ul>
        <div class="btn-add add-type-details">添加</div>
    </div>
</div>

